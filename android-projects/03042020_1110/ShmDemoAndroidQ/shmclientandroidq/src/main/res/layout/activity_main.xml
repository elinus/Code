<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="30px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShmDemo Android-Q # ClientApp" />
        <Switch
            android:id="@+id/switch_native_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Switch b/w Native and Java(os.SharedMemory) Impl."
            android:padding="40px"
            android:textColor="#f00"
            android:textOn="Java"
            android:textOff="Native" />

        <TextView
            android:id="@+id/switch_native_java_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textStyle="bold"
            android:text="None!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This data will be set in Shared Memory!" />
        <EditText
            android:id="@+id/dataForShm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:hint="Enter data here!"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10px"
        android:orientation="vertical">

        <Button
            android:id="@+id/setData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Data" />

        <Button
            android:id="@+id/getData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20px"
        android:orientation="vertical">

        <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output(from shm) :: " />

        <TextView
            android:id="@+id/dataFromShm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/output_native"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output(from shm native) :: " />

        <TextView
            android:id="@+id/dataFromShmNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>